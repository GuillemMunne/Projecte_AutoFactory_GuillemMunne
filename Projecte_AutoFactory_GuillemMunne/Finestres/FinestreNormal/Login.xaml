<Window x:Class="ProjecteAutoFactory.Finestres.FinestreMainWindow.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoFactory"
        Icon="../../src/Imatges/logo.png"
        Height="450" Width="800"
         WindowStartupLocation="CenterOwner">

    <Grid Background="{DynamicResource FondoPrincipal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Image Source="/src/imatges/logo.png" Width="200" Height="100" Margin="0,140,0,0"/>
        <Label Content="Welcome to AutoFactory" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"  Foreground="{DynamicResource LoginWelcomeForeground}"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="360">
            <Border CornerRadius="8" Background="{DynamicResource LoginInputBackground}" Padding="5" Margin="0,0,0,10">
                <DockPanel>
                    <Label Content="Username:" Width="100" VerticalAlignment="Center" Style="{StaticResource LoginLabelGeneral}"/>
                    <TextBox x:Name="UsernameTextBox" Width="230" Height="35" Style="{StaticResource LoginTextBoxGeneral}" FontSize="14" Padding="5"/>
                </DockPanel>
            </Border>

            <Border CornerRadius="8" Background="{DynamicResource LoginInputBackground}" Padding="5">
                <DockPanel>
                    <Label Content="Password:" Width="100" VerticalAlignment="Center" Style="{StaticResource LoginLabelGeneral}"/>
                    <PasswordBox x:Name="PasswordBox" Width="230" Height="35" Style="{StaticResource LoginPasswordBoxGeneral}" FontSize="14" Padding="5"/>
                </DockPanel>
            </Border>

        </StackPanel>

        <Button Content="Login" Width="120" Height="35" Grid.Row="2" Style="{StaticResource LoginButtonGeneral}" Click="LoginButton_click" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
