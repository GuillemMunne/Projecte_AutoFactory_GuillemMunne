<Window x:Class="ProjecteAutoFactory.Finestres.FinestreNormal.AfegirElProducte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="480"
        Width="700"
        WindowStartupLocation="CenterOwner"
        Title="Afegir Producte"
        Icon="../../src/Imatges/logo.png"
        Style="{StaticResource EstilFinestraGeneral}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Grid interior per Nom, Codi, Stock amb més separació -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"  Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nom -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <Label Content="Nom:" Style="{StaticResource EstilLabelGeneral}" Width="60" VerticalAlignment="Center"/>
                <TextBox x:Name="txtNom" Width="150" Style="{DynamicResource EstilTextBoxGeneral}"/>
            </StackPanel>

            <!-- Codi -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                <Label Content="Codi:" Style="{StaticResource EstilLabelGeneral}" Width="60" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCodi" IsEnabled="False" Width="150" Style="{DynamicResource EstilTextBoxGeneral}"/>
            </StackPanel>

            <!-- Stock -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,0">
                <Label Content="Stock:" Style="{StaticResource EstilLabelGeneral}" Width="60" VerticalAlignment="Center"/>
                <TextBox x:Name="txtStock" Width="150" Style="{DynamicResource EstilTextBoxGeneral}"/>
            </StackPanel>
        </Grid>

        <!-- Descripció paral·lela -->
        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Top">
            <Label Content="Descripció:" Style="{StaticResource EstilLabelGeneral}" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescripcio" Height="120" Width="280" TextWrapping="Wrap" AcceptsReturn="True" Style="{DynamicResource EstilTextBoxGeneral}"/>
        </StackPanel>

        <!-- Conte amb quantitat -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,10,10,0">
            <Label Content="Conte:" Style="{StaticResource EstilLabelGeneral}" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" >
                    <Button x:Name="btnAfegirDependencia" Content="+" Width="30" Height="30" Style="{StaticResource EstilBotoCancelar}" />
                    <Button x:Name="btnEliminarDependencia" Content="-" Width="30" Height="30" Style="{StaticResource EstilBotoCancelar}"/>
                </StackPanel>
                <ListBox x:Name="lstConte" Width="250" Height="250" Style="{StaticResource EstilListBoxGeneral}" Margin="0,0,5,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Nom}" VerticalAlignment="Center" Margin="2"/>
                                <TextBox Grid.Column="1" Text="{Binding Quantitat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="50" VerticalAlignment="Center" Margin="2"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>

        <!-- Foto -->
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" Margin="0,10,0,0">
            <Label Content="Foto:" Style="{StaticResource EstilLabelGeneral}" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="txtFoto" Width="200" Style="{DynamicResource EstilTextBoxGeneral}" Margin="0,0,5,0"/>
                <Button x:Name="btnInserirImatge" Content="Inserir Imatge" Width="90" Height="25" Click="inserirImatge" Style="{StaticResource EstilBotoGeneral}"/>
            </StackPanel>
            <Border Background="{DynamicResource FondoCaja}" CornerRadius="6" BorderBrush="{DynamicResource FondoLateral}" BorderThickness="1" Height="200">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="imgFoto" Stretch="Uniform"/>
                </Viewbox>
            </Border>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btnAcceptar" Content="Acceptar" Width="100" Height="30" Click="Acceptar_Click" Style="{StaticResource EstilBotoGeneral}" Margin="0,0,10,0"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Height="30" Click="Cancelar_Click" Style="{StaticResource EstilBotoCancelar}"/>
        </StackPanel>
    </Grid>
</Window>
