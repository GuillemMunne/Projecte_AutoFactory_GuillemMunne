<Window x:Class="ProjecteAutoFactory.Finestres.FinestreNormal.PopUpDependDe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteAutoFactory.Finestres.FinestreNormal"
        mc:Ignorable="d"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterOwner"
        Title="Seleccionar"
        Icon="../../src/Imatges/logo.png"
        Style="{StaticResource EstilFinestraGeneral}"
        Background="{StaticResource FondoPrincipal}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"
                 Height="30"
                 HorizontalAlignment="Stretch"
                 Foreground="{StaticResource TextoPrincipal}"
                 x:Name="tbCercaProducte">
            <TextBox.Template>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{StaticResource FondoCaja}" CornerRadius="10">
                        <Grid>
                            <Image Source="/src/Imatges/lupa.png"
                                   Width="20" Height="20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="5,0,0,0"/>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="25,0,10,0"
                                          VerticalAlignment="Center"
                                          FontFamily="Segoe UI"
                                          FontSize="14"
                                          FontWeight="Normal"
                                          Foreground="{StaticResource TextoPrincipal}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>

        <ListBox Grid.Row="1"
                 x:Name="lstProductesDependDe"
                 Style="{StaticResource EstilListBoxGeneral}"
                 Margin="0,25,0,0"/>
    </Grid>
</Window>
