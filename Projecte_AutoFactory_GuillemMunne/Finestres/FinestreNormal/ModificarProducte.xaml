<Window x:Class="ProjecteAutoFactory.Finestres.FinestreNormal.ModificarProducte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Modificar Producte"
        Height="650"
        Width="550"
        WindowStartupLocation="CenterOwner"
        Icon="../../src/Imatges/logo.png"
        Style="{StaticResource EstilFinestraGeneral}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Codi:" Style="{DynamicResource EstilLabelGeneral}" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtCodi" IsEnabled="False" Style="{DynamicResource EstilTextBoxGeneral}" Margin="0,0,0,10"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Nom:" Style="{DynamicResource EstilLabelGeneral}" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtNom" Style="{DynamicResource EstilTextBoxGeneral}" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Stock:" Style="{DynamicResource EstilLabelGeneral}" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtStock" Style="{DynamicResource EstilTextBoxGeneral}" Margin="0,0,0,10"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Descripció:" Style="{DynamicResource EstilLabelGeneral}" VerticalAlignment="Top" Margin="0,0,10,5"/>
        <ScrollViewer Grid.Row="3" Grid.Column="1" Height="100" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,10">
            <TextBox x:Name="txtDescripcio" Style="{DynamicResource EstilTextBoxGeneral}" TextWrapping="Wrap" AcceptsReturn="True" BorderThickness="1"/>
        </ScrollViewer>

        <Label Grid.Row="4" Grid.Column="0" Content="Conte:" Style="{DynamicResource EstilLabelGeneral}" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnAfegirDependencia" Content="+" Width="30" Height="30" Style="{DynamicResource EstilBotoGeneral}"/>
            <ListBox x:Name="lstDependModfiProd" Style="{DynamicResource EstilListBoxGeneral}" Width="320" Height="150" Margin="0,0,5,0"/>
            <Button x:Name="btnEliminarDependencia" Content="-" Width="30" Height="30" Style="{DynamicResource EstilBotoCancelar}"/>
        </StackPanel>

        <Label Grid.Row="5" Grid.Column="0" Content="Foto:" Style="{DynamicResource EstilLabelGeneral}" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtFoto" Style="{DynamicResource EstilTextBoxGeneral}" Width="150" Margin="0,0,10,0"/>
            <Button x:Name="btnInserirImatge" Content="Inserir Imatge" Width="100" Height="28" Click="inserirImatge" Style="{DynamicResource EstilBotoGeneral}"/>
        </StackPanel>

        <Border Grid.Row="6" Grid.ColumnSpan="2" Background="{DynamicResource FondoCaja}" CornerRadius="8" BorderBrush="{DynamicResource FondoLateral}" BorderThickness="1" Padding="10" Margin="0,0,0,20" Height="150">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="imgFoto" Stretch="Uniform" MinHeight="150" MinWidth="300"/>
            </Viewbox>
        </Border>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btnAcceptar" Content="Acceptar" Width="120" Height="32" Click="Acceptar_Click" Style="{DynamicResource EstilBotoGeneral}" Margin="0,0,10,0"/>
            <Button x:Name="btnCancelar" Content="Cancel·lar" Width="120" Height="32" Click="Cancelar_Click" Style="{DynamicResource EstilBotoCancelar}"/>
        </StackPanel>

    </Grid>
</Window>
