<UserControl x:Class="AutoFactoryProjecte.Finestres.FinestreMainWindow.Ajuda"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoFactoryProjecte.Finestres.FinestreMainWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Border Background="{DynamicResource FondoPrincipal}" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Ajuda i Manual d’Usuari - Projecte AutoFactory" FontSize="22" FontWeight="Bold" Margin="0,0,0,15" Foreground="{DynamicResource TextoPrincipal}" Grid.ColumnSpan="2"/>

                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text=" Seccions disponibles" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource TextoPrincipal}"/>

                    <ListBox x:Name="lbCategoriesErrors"
         SelectionMode="Single"
         SelectionChanged="lbCategoriesErrors_SelectionChanged"
         Background="{DynamicResource FondoCaja}"
         Foreground="{DynamicResource TextoPrincipal}"
         BorderBrush="{DynamicResource FondoLateral}"
         BorderThickness="1"
         Height="340">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Nom}" FontSize="16" Foreground="{DynamicResource TextoPrincipal}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </StackPanel>

                <Border Grid.Row="1" Grid.Column="1" Padding="15" CornerRadius="6" Background="{DynamicResource FondoCaja}" BorderBrush="{DynamicResource FondoLateral}" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock x:Name="txtTitolSeccio" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextoPrincipal}"/>
                            <TextBlock x:Name="txtDescripcioSeccio" Margin="0,10,0,0" TextWrapping="Wrap" FontSize="16" Foreground="{DynamicResource TextoPrincipal}"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
