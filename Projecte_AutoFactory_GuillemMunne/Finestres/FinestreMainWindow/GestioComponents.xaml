<UserControl x:Class="ProjecteAutoFactory.Finestres.FinestreMainWindow.GestioComponents"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjecteAutoFactory.Finestres.FinestreMainWindow"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <Grid Background="{StaticResource FondoPrincipal}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230*"/>
            <ColumnDefinition Width="571*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
           FontFamily="Segoe UI"
           FontSize="22"
           Foreground="{StaticResource TextoSecundario}"
           FontWeight="Bold"
           Content="Gestió de components" Grid.ColumnSpan="2"/>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Width="230" Height="30" Foreground="{StaticResource TextoPrincipal}" x:Name="tbCercaComponent">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{StaticResource FondoCaja}" CornerRadius="10">
                                <Grid>
                                    <Image Source="/src/Imatges/lupa.png" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                                    <ScrollViewer x:Name="PART_ContentHost" Margin="25,0,15,0" VerticalAlignment="Center"
                                                  FontFamily="Segoe UI" FontSize="14" FontWeight="Normal" Foreground="{StaticResource TextoPrincipal}"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnAfegirComponent" Content="Afegir Component" Width="120" Height="30" Style="{StaticResource EstilBotoGeneral}" Margin="5,0"/>
                    <Button x:Name="btnModificarComponent" Content="Modificar Component" Width="120" Height="30" Style="{StaticResource EstilBotoGeneral}" Margin="5,0"/>
                    <Button x:Name="btnEliminarComponent" Content="Eliminar Component" Width="120" Height="30" Style="{StaticResource EstilBotoCancelar}" Margin="5,0"/>
                </StackPanel>
            </StackPanel>

            <ListBox x:Name="LlistaComponentsPrimaris"
                 Grid.Column="0"
                 Grid.Row="1"
                 Style="{StaticResource EstilListBoxGeneral}"
                 MinHeight="200"
                 Margin="0,10,10,10"
                 SelectionMode="Single"/>

            <Grid x:Name="DadesComponent" Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
                    <Label Content="Nom:" Style="{StaticResource EstilLabelGeneral}"/>
                    <TextBox x:Name="txtNom" Style="{StaticResource EstilTextBoxGeneral}"/>

                    <Label Content="Codi:" Style="{StaticResource EstilLabelGeneral}"/>
                    <TextBox x:Name="txtCodi" Style="{StaticResource EstilTextBoxGeneral}" IsEnabled="False"/>

                    <Label Content="Stock:" Style="{StaticResource EstilLabelGeneral}"/>
                    <TextBox x:Name="txtStock" Style="{StaticResource EstilTextBoxGeneral}"/>

                    <Label Content="Codi Fabricant:" Style="{StaticResource EstilLabelGeneral}"/>
                    <TextBox x:Name="txtCodiFabricant" Style="{StaticResource EstilTextBoxGeneral}"/>

                    <Label Content="Preu Mig:" Style="{StaticResource EstilLabelGeneral}"/>
                    <TextBox x:Name="txtPreuMig" Style="{StaticResource EstilTextBoxGeneral}" IsEnabled="False"/>

                    <Label Content="Foto:" Style="{StaticResource EstilLabelGeneral}"/>
                    <TextBox x:Name="txtFoto" Style="{StaticResource EstilTextBoxGeneral}" />
                    <Button x:Name="btnInserirImatge" Content="Inserir Imatge" Width="90" Height="25" Style="{StaticResource EstilBotoGeneral}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                    <Label Content="Descripció:" Style="{StaticResource EstilLabelGeneral}"/>
                    <ScrollViewer Height="100" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,10">
                        <TextBox x:Name="txtDescripcio" Style="{StaticResource EstilTextBoxGeneral}" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </ScrollViewer>

                    <Label Content="Proveidors:" Width="100" HorizontalAlignment="Left" Style="{StaticResource EstilLabelGeneral}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="btnAfegirDependencia" Content="+" Width="30" Height="30" Style="{StaticResource EstilBotoGeneral}"/>
                        <ComboBox x:Name="txtDependAfegirProd" Style="{StaticResource EstilComboBoxGeneral}" Width="170" SelectionChanged="txtDependAfegirProd_SelectionChanged"/>
                        <Button x:Name="btnEliminarDependencia" Content="-" Width="30" Height="30" Style="{StaticResource EstilBotoCancelar}"/>
                    </StackPanel>

                    <Label Content="Proveïdors i preus:" Style="{StaticResource EstilLabelGeneral}"/>
                    <DataGrid x:Name="dgProveidors"
                          AutoGenerateColumns="False"
                          CanUserAddRows="True"
                          CanUserDeleteRows="True"
                          HeadersVisibility="Column"
                          Height="150"
                          Margin="0,0,0,10"
                          Background="{StaticResource FondoCaja}"
                          Foreground="{StaticResource TextoPrincipal}"
                          BorderBrush="{StaticResource FondoLateral}"
                          BorderThickness="1"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridComboBoxColumn Header="Proveïdor"
                                                SelectedValueBinding="{Binding ProveidorId, Mode=TwoWay}"
                                                SelectedValuePath="Id"
                                                DisplayMemberPath="Nom"
                                                Width="*"
                                                ItemsSource="{Binding LlistaProveidors}"/>
                            <DataGridTextColumn Header="Preu (€)"
                                            Binding="{Binding Preu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Background="{StaticResource FondoCaja}" CornerRadius="6" BorderBrush="{StaticResource FondoLateral}" BorderThickness="1" Height="150" VerticalAlignment="Center">
                        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image x:Name="imgFoto" Stretch="Uniform" MaxHeight="150" MaxWidth="380"/>
                        </Viewbox>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
